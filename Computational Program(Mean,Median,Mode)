   "source": [
    "# Finding the mean of grouped data\n",
    "\n",
    "# Lower and upper class boundaries of each class interval\n",
    "lower_class = [15, 25, 35, 45, 55]\n",
    "upper_class = [25, 35, 45, 55, 65]\n",
    "\n",
    "# Frequency (number of items) corresponding to each class interval\n",
    "f = [350, 375, 120, 80, 90]\n",
    "\n",
    "# Empty list to store the product of class mark (x) and frequency (f)\n",
    "fx = []\n",
    "\n",
    "for i in range(5):\n",
    "    # Calculate class mark (midpoint) for each interval\n",
    "    x = (lower_class[i] + upper_class[i]) / 2  \n",
    "\n",
    "    prod = x * f[i]\n",
    "    fx.append(prod)\n",
    "\n",
    "# Calculate total of (f * x)\n",
    "sum_fx = sum(fx)\n",
    "\n",
    "# Calculate total frequency\n",
    "sum_f = sum(f)\n",
    "\n",
    "# Formula for mean = Σ(fx) / Σf\n",
    "mean = sum_fx / sum_f\n",
    "\n",
    "# Display the mean\n",
    "print(\"Mean =\", mean)\n"
   ]
  },
