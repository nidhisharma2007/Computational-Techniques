   "source": [
    "# Finding the mode of grouped data\n",
    "\n",
    "# Lower and upper class boundaries of each class interval\n",
    "lower = [15, 25, 35, 45, 55]\n",
    "upper = [25, 35, 45, 55, 65]\n",
    "\n",
    "# Frequency (number of items) for each class\n",
    "f = [350, 375, 120, 80, 90]\n",
    "\n",
    "\n",
    "# Modal class = class with the highest frequency\n",
    "max_f = max(f)                 # Highest frequency (modal frequency)\n",
    "m = f.index(max_f)           \n",
    "\n",
    "\n",
    "L = lower[m]                   # Lower boundary of modal class\n",
    "f1 = f[m]                      # Frequency of modal class\n",
    "f0 = f[m - 1] if m > 0 else 0  # Frequency of class before modal class\n",
    "f2 = f[m + 1] if m < len(f)-1 else 0  # Frequency of class after modal class\n",
    "h = upper[m] - lower[m]        # Class width (h = upper - lower)\n",
    "\n",
    "\n",
    "# Formula: Mode = L + ((f1 - f0) / ((2*f1) - f0 - f2)) * h\n",
    "mode = L + ((f1 - f0) / ((2 * f1) - f0 - f2)) * h\n",
    "\n",
    "\n",
    "print(\"Mode =\", mode)\n"
   ]
  },
