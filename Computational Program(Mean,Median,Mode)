   "source": [
    "# Finding the median of grouped data\n",
    "\n",
    "# Lower and upper class boundaries of each class interval\n",
    "lower = [15, 25, 35, 45, 55]\n",
    "upper = [25, 35, 45, 55, 65]\n",
    "\n",
    "# Frequency (number of items) corresponding to each class\n",
    "f = [350, 375, 120, 80, 90]\n",
    "\n",
    "#  Calculate total frequency (N)\n",
    "N = sum(f)\n",
    "\n",
    "# Find N/2 (half of total frequency)\n",
    "half = N / 2\n",
    "\n",
    "# Compute cumulative frequency (cf)\n",
    "cf = []\n",
    "temp = 0\n",
    "for i in f:\n",
    "    temp += i\n",
    "    cf.append(temp)\n",
    "\n",
    "for i in range(len(cf)):\n",
    "    if cf[i] >= half:\n",
    "        L = lower[i]                  # Lower boundary of median class\n",
    "        F = cf[i-1] if i > 0 else 0   # Cumulative frequency before median class\n",
    "        f_m = f[i]                    # Frequency of median class\n",
    "        h = upper[i] - lower[i]       # Class width (h = upper - lower)\n",
    "        break\n",
    "\n",
    "\n",
    "# Formula: Median = L + [(N/2 - F) / f_m] * h\n",
    "median = L + ((half - F) / f_m) * h\n",
    "\n",
    "\n",
    "print(\"Median =\", median)\n"
   ]
  },
